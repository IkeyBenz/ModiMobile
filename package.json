{
  "name": "ModiMobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android-prod": "export ENVFILE=.env.prod && react-native run-android",
    "android-dev": "export ENVFILE=.env.dev && react-native run-android",
    "ios-prod": "export ENVFILE=.env.prod && react-native run-ios",
    "ios-dev": "export ENVFILE=.env.dev && react-native run-ios",
    "ios-beta-deploy": "cd ios && fastlane beta --env prod",
    "serve-prod": "export ENVFILE=.env.prod && react-native start",
    "serve-dev": "export ENVFILE=.env.dev && react-native start",
    "gamescreen-devmode": "ts-node -r dotenv/config ./setupGameScreenDevMode.ts dotenv_config_path=./.env.dev",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.7.1",
    "@react-native-community/masked-view": "^0.1.6",
    "@types/lodash": "^4.14.158",
    "@types/node": "^14.6.0",
    "@types/react-native": "^0.62.7",
    "@types/react-native-keyboard-spacer": "^0.4.1",
    "@types/react-native-share": "^3.3.0",
    "@types/react-native-vector-icons": "^6.4.5",
    "@types/socket.io-client": "^1.4.32",
    "axios": "^0.19.2",
    "babel-plugin-root-import": "^6.5.0",
    "lodash": "^4.17.19",
    "prop-types": "^15.7.2",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-card-flip": "^1.0.6",
    "react-native-config": "^1.3.1",
    "react-native-gesture-handler": "^1.5.3",
    "react-native-keyboard-spacer": "^0.4.1",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.6.2",
    "react-native-screens": "^2.0.0-alpha.25",
    "react-native-sensitive-info": "^5.5.5",
    "react-native-share": "^3.0.0",
    "react-native-use-persist-storage": "^1.0.1",
    "react-native-vector-icons": "^7.0.0",
    "react-navigation": "^4.0.10",
    "react-navigation-stack": "^2.0.15",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/runtime": "7.8.3",
    "@react-native-community/eslint-config": "0.0.5",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-jest": "24.9.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "24.9.0",
    "metro-react-native-babel-preset": "0.56.4",
    "prettier": "^2.0.5",
    "react-test-renderer": "16.9.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "google"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "ignorePatterns": "*.d.ts",
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "object-curly-spacing": "off",
      "react-hooks/exhaustive-deps": "off",
      "react-native/no-inline-styles": "off",
      "require-jsdoc": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "valid-jsdoc": "off",
      "indent": [
        "error",
        2
      ],
      "operator-linebreak": "off"
    },
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
  },
  "prettier": {
    "parser": "typescript",
    "bracketSpacing": true,
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 2
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
